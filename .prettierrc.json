{
    "tabWidth": 4,
    "plugins": [
        "prettier-plugin-solidity"
    ],
    "overrides": [
        {
            "files": "*.yml",
            "options": {}
        },
        {
            "files": "*.yaml",
            "options": {}
        },
        {
            "files": "*.toml",
            "options": {}
        },
        {
            "files": "*.json",
            "options": {}
        },
        {
            "files": "*.js",
            "options": {}
        },
        {
            "files": "*.ts",
            "options": {
                "printWidth": 120,
                "trailingComma": "es5",
                "tabWidth": 2,
                "useTabs": false,
                "semi": true,
                "singleQuote": false,
                "endOfLine": "lf",
                "bracketSpacing": true
            }
        },
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 120,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        }
    ]
}